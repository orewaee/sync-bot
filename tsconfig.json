{
    "include": [ "src" ],
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        // Type Checking
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,

        // Modules
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        // Emit
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false,

        // Interop Constraints
        "esModuleInterop": true,

        // Language and Environment
        "target": "ESNext",

        // Completeness
        "skipLibCheck": true
    }
}
