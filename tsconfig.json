{
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        // Temporarily
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,

        // Modules
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        // Emit
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,

        // Interop Constraints
        "esModuleInterop": true,

        // Language and Environment
        "target": "ESNext"
    }
}
